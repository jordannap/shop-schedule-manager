<div class="w-50">
<%= form_with(model: shop) do |form| %>
  <% if shop.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>
      <ul>
        <% shop.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex text-center justify-content-center">
    <%= form.text_field :name, placeholder:"Enter Name", class:"form-control w-50" %>
  </div>
  <div class="text-center">
    <%= form.submit t(:update), class:"mt-3 btn btn-success" %>
    <br/>
    <%= link_to t(:back_to_shops), shops_path, class:"btn btn-sm" %>
  </div>
<% end %>
</div>
